<Window
    x:Class="WPF.SkinDiseaseDevice.View.SkinScannerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.SkinDiseaseDevice.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SkinScannerView"
    Width="1080"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />

        </Grid.ColumnDefinitions>
        <!--  Header  -->
        <StackPanel Grid.Row="0" Grid.Column="1">
            <Button
                Width="100"
                Margin="5"
                HorizontalAlignment="Right"
                Background="Black"
                Content="Login" />
            <TextBlock
                Width="150"
                FontSize="24"
                FontWeight="Bold"
                Foreground="Black"
                Text="Skin Scanner" />

        </StackPanel>

        <!--  Main Content  -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2">
            <TextBlock
                Margin="10,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Image Processing" />
            <ListView Name="imageListView" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="200" Header="Captured Images">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image
                                        Width="150"
                                        Height="150"
                                        Source="{Binding ImageSource}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.RowSpan="2">
            <TextBlock
                Margin="10,10,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Analysis Results" />

        </StackPanel>
        <Image
            x:Name="webcamImage"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Stretch="UniformToFill" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Width="220"
            Height="30"
            Margin="0,0,0,10"
            Background="Black"
            Content="Capture Image" />
    </Grid>
</Window>
